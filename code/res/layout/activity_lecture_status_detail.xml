<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/br.com.redu.redumobile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <br.com.redu.redumobile.widgets.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar"
        app:title="Ambientes" />

    <TextView
        android:id="@+id/tv_lecture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_page"
        android:gravity="center_vertical"
        android:paddingBottom="7dip"
        android:paddingLeft="15dip"
        android:text="Aula Lipsum"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/azul" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/cinzaClaro" />

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:divider="@color/cinzaClaro"
        android:dividerHeight="1dip" >
    </ListView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:onClick="onWallClicked"
            android:text="Mural" />

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:onClick="onAnswerClicked"
            android:text="Responder" />
    </LinearLayout>

</LinearLayout>