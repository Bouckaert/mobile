<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:background="@drawable/bg_actionbar" >

    <ImageButton
        android:id="@+id/b_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"  
        android:src="@drawable/ic_logo_redu"
        android:background="@null" />

    <TextView
        android:id="@+id/tv_title_action_bar"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="5dip"
        android:text="Redu" />

    <!-- <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onNotificationsClicked"
        android:text="N" 
        android:src="@drawable/ic_notifications"
        android:background="@null" /> -->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onEnvironmentClicked"
        android:text="E" 
        android:src="@drawable/btn_enviroments_selector"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSettingsClicked"
        android:text="S" 
        android:src="@drawable/btn_settings_selector"
        android:background="@null" />

</LinearLayout>