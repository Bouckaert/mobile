<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/btNovoModulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bt_novomodulo"
        android:background="@null"
        android:layout_margin="12dp" />
	<View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@drawable/img_divider" />
    <ExpandableListView
        android:id="@+id/elvSubject"
        android:layout_width="match_parent"
        android:background="#fff"
        android:divider="@null"
        android:layout_height="wrap_content" >
    </ExpandableListView>

    <TextView
        android:id="@+id/elv_subject_empyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:text="Esta Disciplina está vazia, comece adicionando um novo Módulo através do botão acima"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"
        android:padding="15dp" />

</LinearLayout>